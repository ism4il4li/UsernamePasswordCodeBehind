<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UsernamePasswordCodeBehind.UsernamePassword"
             Title="UsernamePassword"
             >
    <VerticalStackLayout VerticalOptions="Center" Padding="20">
        <Label Text="Username" FontSize="25"/>
        <Entry Placeholder="Enter your name" FontSize="25" x:Name="entryName"/>
        <Label Text="Password" FontSize="25"/>
        <Entry Placeholder="Enter your password" FontSize="25" IsPassword="True" x:Name="entryPassword"/>
        <Button Text="Login" FontSize="25" Margin="0,30,0,0"
                Clicked="Button_Clicked"/>
    </VerticalStackLayout>
</ContentPage>